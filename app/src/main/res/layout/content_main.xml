<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".app.MainActivity"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="333dp"
        android:layout_height="416dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/protocolSelectorLayout"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/protocolSelectorTitle"
                android:layout_width="190dp"
                android:layout_height="43dp"
                android:layout_above="@+id/protocolSelector"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="71dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="71dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/select_protocol_title" />

            <com.tpp.private_doh.components.ProtocolSelector
                android:id="@+id/protocolSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="67dp"
                android:checkedButton="@id/rbDoH"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:text="@string/racing_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/rbDoH"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/doh"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbDNS"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dns"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbBoth"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:text="@string/both"
                    android:textSize="20sp" />
            </com.tpp.private_doh.components.ProtocolSelector>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="331dp"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="121dp">

            <TextView
                android:id="@+id/RacingSeekBarText"
                android:layout_width="153dp"
                android:layout_height="27dp"
                android:layout_above="@+id/RacingSeekBar"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="83dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="83dp"
                android:layout_marginBottom="42dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/racing_amount"
                app:layout_constraintBottom_toTopOf="@+id/RacingSeekBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/RacingSeekBar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="152dp"
                android:layout_marginTop="-160dp"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="12dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                app:layout_constraintBottom_toTopOf="@+id/RacingSeekBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <SeekBar
                android:id="@+id/RacingSeekBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:max="10"
                android:min="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.404" />

        </RelativeLayout>

        <com.tpp.private_doh.components.StartVPNButton
            android:id="@+id/startVpn"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/button"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="153dp"
        android:layout_height="190dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">


        <Button
            android:id="@+id/resolversCountsButton"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="fetchCount"
            android:text="@string/fetch_resolvers_counts"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <TextView
            android:id="@+id/resolversCountsText"
            android:layout_width="153dp"
            android:layout_height="169dp"
            android:layout_below="@+id/resolversCountsButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintVertical_bias="0.768" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>