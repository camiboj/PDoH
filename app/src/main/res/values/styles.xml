<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textSize">120sp</item>
        <item name="android:textColor">@color/colorTextWithBackground</item>
    </style>



    <style name="AppTheme.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextWithBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">15sp</item>
    </style>

    <style name="AppTheme.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingBottom">15sp</item>
    </style>


    <style name="AppTheme.ProgressOutput">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.InternetErrorOutput">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingBottom">15sp</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Options">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="RacingAmountSelector">
        <attr name="text_id" format="reference|enum"/>
    </declare-styleable>

    <style name="AppTheme.MetricsHeadLine1">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.MetricsHeadLine2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:paddingStart">50sp</item>
        <item name="android:paddingTop">10sp</item>
    </style>

    <style name="AppTheme.Metric">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="AppTheme.QuestionMark">
        <item name="android:paddingStart">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/question</item>
        <item name="android:textSize">10sp</item>

    </style>
</resources>
